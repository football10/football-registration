<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.footballregistration.dao.EventInfoDao">
	<resultMap id="EventInfoResult" type="org.footballregistration.dao.entity.EventInfo">
        <result column="eventId" property="eventId" />
        <result column="eventName" property="eventName" />
        <result column="status" property="status" />
        <result column="deadlineDate" property="deadlineDate" />
        <result column="eventKbn" property="eventKbn" />
        <result column="proposerUserId" property="proposerUserId" />
        <result column="eventDate1" property="eventDate1" />
        <result column="eventDate2" property="eventDate2" />
        <result column="eventDate4" property="eventDate4" />
        <result column="eventDate4" property="eventDate4" />
        <result column="eventPlaceName" property="eventPlaceName" />
        <result column="eventPlaceX" property="eventPlaceX" />
        <result column="eventPlaceY" property="eventPlaceY" />
        <result column="eventCost" property="eventCost" />
        <result column="eventUnit" property="eventUnit" />
        <result column="phoneNo" property="phoneNo" />
        <result column="comment" property="comment" />
    </resultMap>
	<select id="selectEventInfo" resultMap="EventInfoResult" parameterType="Long">
		select
			EVENT_ID
			,EVENT_NAME
			,STATUS
			,DEADLINE_DATE
			,EVENT_KBN
			,PROPOSER_USER_ID
			,EVENT_DATE_1
			,EVENT_DATE_2
			,EVENT_DATE_3
			,EVENT_DATE_4
			,EVENT_PLACE_NAME
			,EVENT_PLACE_X
			,EVENT_PLACE_Y
			,EVENT_COST
			,COST_UNIT
			,PHONE_NO
			,COMMENT
		from EVENT_INFO
		where
			EVENT_ID= #{eventId}
	</select>
	<insert id="insertEventInfo" parameterType="org.footballregistration.dao.entity.EventInfo">
		insert into EVENT_INFO
			(EVENT_NAME
			,STATUS
			,DEADLINE_DATE
			,EVENT_KBN
			,PROPOSER_USER_ID
			,EVENT_DATE_1
			,EVENT_DATE_2
			,EVENT_DATE_3
			,EVENT_DATE_4
			,EVENT_PLACE_NAME
			,EVENT_PLACE_X
			,EVENT_PLACE_Y
			,EVENT_COST
			,COST_UNIT
			,PHONE_NO
			,COMMENT)
		values (
			#{event_name},
			#{status},
			#{deadline_date},
			#{event_kbn},
			#{proposer_user_id},
			#{event_date_1},
			#{event_date_2},
			#{event_date_3},
			#{event_date_4},
			#{event_place_name},
			#{event_place_x},
			#{event_place_y},
			#{event_cost},
			#{cost_unit},
			#{phone_no},
			#{comment})
	</insert>
</mapper>